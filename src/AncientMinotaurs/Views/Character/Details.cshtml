@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<hr />

<div class="character-avatar" >
    <img src='@Model.Avatar'/>
</div>
<p>Health: @Model.Health / 100</p>
<p>Experience: @Model.Experience</p>
<hr />
<h4>Inventory</h4>

<ul>
    @foreach (var item in ViewBag.Items)
    {
        <li>
            @item.ItemName
        </li>
    }
</ul>